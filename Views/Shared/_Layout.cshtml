<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - E-Recarga</title>
    @Styles.Render("~/Content/css")

</head>
<body id="page-top">

    <!-- Navigation -->

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            @Html.ActionLink("E-Recarga", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Listar utilizadores", "IndexTodosClientes", "Manage", new { @class = "nav-link " })
                            </li>
                        }
                        else
                        {
                            if (User.IsInRole("RedeProprietaria"))
                            {

                            }
                        }
                        <li class="nav-item">
                            @Html.ActionLink("Estação Carregamento", "Index", "EstacaoCarregamento", new { @class = "nav-link " })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Posto", "Index", "Posto", new { @class = "nav-link " })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Veiculo", "Index", "Veiculos", new { @class = "nav-link " })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Reserva", "Index", "Reserva", new { @class = "nav-link " })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Tomada Posto", "Index", "TomadaPosto", new { @class = "nav-link " })
                        </li>
                    }

                </ul>
                <ul class="navbar-nav">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>



