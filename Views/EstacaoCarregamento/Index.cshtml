@model IEnumerable<e_Recarga.Models.EstacaoCarregamento>

@{
    ViewBag.Title = "Index";
}

    <div class="container top-pad">
        <hr />
        <div class="mb-3">
            <h4>Estacao de Carreagamento</h4>
        </div>
        <hr />

        <div class="row">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Designacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Latitude)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Longitude)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CodigoPostal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Localidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ConcelhoEstacaoCarregamento.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UtilizadorEstacao.Nome)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Designacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Latitude)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Longitude)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodigoPostal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Localidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConcelhoEstacaoCarregamento.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UtilizadorEstacao.Nome)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
