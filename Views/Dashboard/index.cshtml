@model e_Recarga.Models.ViewModels.DashboardViewModel


@{
    ViewBag.Title = "index";
}

<div class="container top-pad">
    <div class="row">
        <div class="col-md-4">
            <h3>Reservas Ano Corrente</h3>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayName("Reservas")
                        </th>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.ReservasAnoCorrente)
                        </td>
                    </tr>
                </table>
        </div>
        <div class="col-md-4">
            <h3>Reservas Mês Corrente</h3>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayName("Reservas")
                    </th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.ReservasMesCorrente)
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-4">
            <h3>Reservas Dia Corrente</h3>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayName("Reservas")
                    </th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.ReservasDiaCorrente)
                    </td>
                </tr>
            </table>
        </div>
        </div>



    <div class="row">
        <div class="col-md-6">
            <h3>Top 5 Postos Carregamento Ano Corrente</h3>
            @if (Model.Top5PostosAnoCorrente != null)
            {
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayName("Posto")
                        </th>
                        <th>
                            @Html.DisplayName("Estação Carregamento")
                        </th>
                    </tr>

                    @foreach (var item in Model.Top5PostosAnoCorrente)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EstacaoCarregamentoPosto.Designacao)
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>Sem reservas </p>
            }
        </div>
        <div class="col-md-6">
            <h3>Top 5 Postos Carregamento Mês Corrente</h3>
            @if (Model.Top5PostosAnoCorrente != null)
            {
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayName("Posto")
                        </th>
                        <th>
                            @Html.DisplayName("Estação Carregamento")
                        </th>
                    </tr>

                    @foreach (var item in Model.Top5PostosMesCorrente)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EstacaoCarregamentoPosto.Designacao)
                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <p>Sem reservas </p>
            }
        </div>
    </div>
</div>

